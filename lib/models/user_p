/* 
// Example Usage
Map<String, dynamic> map = jsonDecode(<myJSONString>);
var myRootNode = Root.fromJson(map);
*/ 
class Author {

    Author(); 

}

class Comment {
    DateTime? postedAt;
    DateTime? updatedat;
    Author? author;
    String? name;
    String? message;

    Comment({this.postedAt, this.updatedat, this.author, this.name, this.message}); 

    Comment.fromJson(Map<String, dynamic> json) {
        postedAt = json['postedAt'];
        updatedat = json['updated_at'];
        author = json['author'] != null ? Author?.fromJson(json['author']) : null;
        name = json['name'];
        message = json['message'];
    }

    Map<String, dynamic> toJson() {
        final Map<String, dynamic> data = Map<String, dynamic>();
        data['postedAt'] = postedAt;
        data['updated_at'] = updatedat;
        data['author'] = author!.toJson();
        data['name'] = name;
        data['message'] = message;
        return data;
    }
}

class File {

    File(); 

}

class Img {

    Img(); 

}

class ProfileUser {

    ProfileUser(); 

}

class Root {
    Img? img;
    String? postUsername;
    ProfileUser? profileUser;
    List<Comment?>? comments;
    DateTime? postedAt;
    List<File?>? files;
    String? id;
    String? message;

    Root({this.img, this.postUsername, this.profileUser, this.comments, this.postedAt, this.files, this.id, this.message}); 

    Root.fromJson(Map<String, dynamic> json) {
        img = json['img'] != null ? Img?.fromJson(json['img']) : null;
        postUsername = json['postUsername'];
        profileUser = json['profileUser'] != null ? ProfileUser?.fromJson(json['profileUser']) : null;
        if (json['comments'] != null) {
         comments = <Comment>[];
         json['comments'].forEach((v) {
         comments!.add(Comment.fromJson(v));
        });
      }
        postedAt = json['postedAt'];
        if (json['files'] != null) {
         files = <File>[];
         json['files'].forEach((v) {
         files!.add(File.fromJson(v));
        });
      }
        id = json['id'];
        message = json['message'];
    }

    Map<String, dynamic> toJson() {
        final Map<String, dynamic> data = Map<String, dynamic>();
        data['img'] = img!.toJson();
        data['postUsername'] = postUsername;
        data['profileUser'] = profileUser!.toJson();
        data['comments'] =comments != null ? comments!.map((v) => v?.toJson()).toList() : null;
        data['postedAt'] = postedAt;
        data['files'] =files != null ? files!.map((v) => v?.toJson()).toList() : null;
        data['id'] = id;
        data['message'] = message;
        return data;
    }
}


